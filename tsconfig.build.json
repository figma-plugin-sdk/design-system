{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["dom", "ESNext"],
    "incremental": true,

    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "paths": {
      "@fps/*": [
        "./components/*"
      ]
    }
  },
  "include": [
    "src/**/*.marko"
  ],
  "exclude": [
      "*.stories.ts"
  ]
}